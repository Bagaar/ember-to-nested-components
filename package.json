{
  "name": "ember-flat-to-nested",
  "version": "1.0.0",
  "description": "Transforms a flat colocated component structure to a nested colocated component structure.",
  "repository": "https://github.com/bertdeblock/ember-flat-to-nested",
  "license": "MIT",
  "author": "Bert De Block",
  "main": "lib/index.js",
  "bin": "bin/index.js",
  "files": [
    "bin/",
    "lib/"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix",
    "start": "ava --watch",
    "test": "ava"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "ava": {
    "files": [
      "test/test.js"
    ],
    "ignoredByWatcher": [
      "test/output"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.1.0",
    "recursive-readdir": "^2.2.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ava": "^3.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "recursive-copy": "^2.0.11"
  },
  "engines": {
    "node": ">= 18"
  }
}
